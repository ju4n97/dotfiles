{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "background": "#282c34",
    "black": "#282c34",
    "blue": "#61afef",
    "cyan": "#56b6c2",
    "foreground": "#dcdfe4",
    "green": "#98c379",
    "magenta": "#c678dd",
    "red": "#e06c75",
    "white": "#dcdfe4",
    "yellow": "#e5c07b"
  },
  "transient_prompt": {
    "template": "> ",
    "foreground": "p:magenta",
    "foreground_templates": [
      "{{ if gt .Code 0 }}p:red{{ end }}"
    ]
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "\u256d\u2500",
          "foreground": "p:foreground",
          "type": "text",
          "style": "plain"
        },
        {
          "template": "{{ .UserName }}@{{ .HostName }}:",
          "foreground": "p:yellow",
          "type": "session",
          "style": "plain"
        },
        {
          "options": {
            "style": "full"
          },
          "template": "{{ .Path }}",
          "foreground": "p:blue",
          "type": "path",
          "style": "plain"
        },
        {
          "options": {
            "branch_icon": "",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_worktree_count": true
          },
          "template": " <p:cyan>git</>:({{ if or (.Working.Changed) (.Staging.Changed) (gt .StashCount 0) }}<p:magenta>{{ .HEAD }}</>{{ else }}<p:green>{{ .HEAD }}</>{{ end }}{{ if (gt .Ahead 0)}}<p:cyan>{{ .BranchStatus }}</>{{ end }}{{ if (gt .Behind 0)}}<p:cyan>{{ .BranchStatus }}</>{{ end }}{{ if .Staging.Changed }} <p:green>{{ .Staging.String }}</>{{ end }}{{ if .Working.Changed }} <p:red>{{ .Working.String }}</>{{ end }})",
          "foreground": "p:foreground",
          "type": "git",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "\u2570\u2500",
          "foreground": "p:foreground",
          "type": "text",
          "style": "plain"
        },
        {
          "options": {
            "always_enabled": true
          },
          "template": " ({{ .Code }}) > ",
          "foreground": "p:foreground",
          "type": "status",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:red{{ else }}p:green{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 4
}
